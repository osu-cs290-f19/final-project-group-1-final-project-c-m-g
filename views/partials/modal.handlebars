<div id="add-screen-overlay" class="hidden"></div><!--***-->
    <section id="add-recipe-card" class = "hidden"> <!--createModal-->

      <div id="add-recipe-modal" class="hidden">
        <div class="add-modal">

         <div class="recipe-modal-header">
           
            <h3>Add a Recipe Card to the Box</h3>
            <button type="button-x" id="modal-close-x" class="modal-hide-button-x">&times;</button>
          </div> 

          <div class="recipe-modal-body">

            <div class="recipe-input-element">
              <label for="recipe-title-input">Recipe Name</label>
              <input type="text" id="recipe-title-input"></input>
            </div>

            <div class="recipe-input-element">
              <label for="recipe-photo-input">Photo URL</label>
              <input type="text" id="recipe-photo-input">
            </div>

            <div class="recipe-input-element">
              <label for="recipe-size-input">Recipe Size (# of people)</label>
              <input type="text" id="recipe-size-input">
            </div>

            <div class="recipe-input-element">
                <label for="recipe-time-input">Total Cooking Time</label>
                <input type="text" id="recipe-time-input">
            </div>

            <div class="recipe-input-element">
                <label for="recipe-author-input">Recipe Author</label>
                <input type="text" id="recipe-author-input">
            </div>

            <!-- testing added div around all fieldsets -->
           <div class="fieldset-group">
            <div class="recipe-input-element">
                <fieldset id="recipe-difficulty-fieldset" class="difficulty-fieldset">
                  <legend>Difficulty Level</legend>
                  <div>
                    <input type="radio" name="difficulty-rating" id="difficulty-rating-easy" value="Easy Street" checked>
                    <label for="difficulty-rating-easy">Easy Street</label>
                  </div>
                  <div>
                    <input type="radio" name="difficulty-rating" id="difficulty-rating-medium" value="Got Skills">
                    <label for="difficulty-rating-skills">Got Skills</label>
                  </div>
                  <div>
                    <input type="radio" name="difficulty-rating" id="difficulty-rating-chef" value="Top Chef">
                    <label for="difficulty-rating-chef">Top Chef</label>
                  </div>
                </fieldset>
            </div>

            <div class="recipe-input-element">
              <fieldset id="recipe-spice-fieldset" class="spice-fieldset">
                <legend>Spice Level</legend>
                <div>
                  <input type="radio" name="spice-rating" id="spice-rating-none" value="None" checked>
                  <label for="spice-rating-none">None</label>
                </div>
                <div>
                  <input type="radio" name="spice-rating" id="spice-rating-mild" value="Mild">
                  <label for="spice-rating-mild">Mild</label>
                </div>
                <div>
                  <input type="radio" name="spice-rating" id="spice-rating-medium" value="Medium">
                  <label for="spice-rating-medium">Medium</label>
                </div>
                <div>
                  <input type="radio" name="spice-rating" id="spice-rating-hot" value="Hot">
                  <label for="spice-rating-hot">Hot</label>
                </div>
              </fieldset>
            </div>

            <div class="recipe-input-element">
              <fieldset id="recipe-meal-fieldset" class="meal-fieldset">
                <legend>Which Meal?</legend>
                <div>
                  <input type="radio" name="meal-time" id="meal-time-breakfast" value="Breakfast" checked>
                  <label for="meal-time-breakfast">Breakfast</label>
                </div>
                <div>
                  <input type="radio" name="meal-time" id="meal-time-lunch" value="Lunch">
                  <label for="meal-time-lunch">Lunch</label>
                </div>
                <div>
                  <input type="radio" name="meal-time" id="meal-time-dinner" value="Dinner">
                  <label for="meal-time-dinner">Dinner</label>
                </div>
              </fieldset>
            </div>
          </div>
          <!-- end fieldset group^^^ -->

            <div class="ingredients-input-container">
                 <!-- *********ingredients volume in number form***********-->
                  <div class="recipe-input-element">
                      <label for="recipe-ingredient-input">Ingredients</label>
                      <input type="text" id="recipe-ingredient-input">
                  </div>
            </div>
              <div class="directions-input-container">
                  <!--*********directions body***********-->
                    <div class="recipe-input-element">
                        <label for="recipe-directions-input">Directions</label>
                        <input type="text" id="recipe-directions-input"></input>
                    </div>
              </div>

                <!------------->

          </div>

          <div class="modal-footer">
            <button type="button" id="modal-accept" class="action-button">Create Recipe</button>
          </div>

        </div>
      </div>

    </section>

